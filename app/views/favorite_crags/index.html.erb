<div class="container">
  <h1>Learn more about your favorite crag</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Crag name</th>
        <th>Number of Routes</th>
        <th>Climbing Styles</th>
        <th>Learn more</th>
      </tr>
    </thead>
    <tbody>
        <% @favorite_crags.each do |crag| %>
        <tr id=<%= "#{crag.id}" %>>
        <td><%= crag.name %></td>
        <td><%= crag.route_quantity %></td>
        <td><%= crag.climbing_styles %></td>
        <td><%#= link_to "View Details", crag_details %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>
